<Window x:Class="PIT_PR_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PIT_PR_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="330" Width="345" Closing="MainWindow_Closing">
    <Grid Margin="0,0,0,2">
        <Button Name="Solve_Button" Content="Вычислить" ToolTip="Вычислить функцию" Click="Solve_Button_Click" 
                HorizontalAlignment="Left" Margin="244,195,0,0" VerticalAlignment="Top" Height="24" Width="70" />
        <Button Name="Clear_Button" Content="Очистить" ToolTip="Очистить все поля" Click="Clear_Button_Click" 
                HorizontalAlignment="Left" Margin="244,228,0,0" VerticalAlignment="Top" Height="24" Width="70" />

        <TextBox Name="X_TextBox" HorizontalAlignment="Left" ToolTip="Исходные данные для x" Text="" 
                 Height="20" Margin="71,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <TextBox Name="Y_TextBox" HorizontalAlignment="Left" ToolTip="Исходные данные для y" Text="" 
                 Height="20" Margin="71,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"/>
        <TextBox Name="Solve_TextBox" HorizontalAlignment="Left" ToolTip="Итог вычисления" Text="" IsEnabled="False"
                 Height="20" Margin="71,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" />

        <RadioButton Name="RB_1" Content="sh(x)" ToolTip="Гиперболический синус" HorizontalAlignment="Left" Margin="71,201,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="RB_2" Content="x^2" ToolTip="Квадрат" HorizontalAlignment="Left" Margin="71,221,0,0" VerticalAlignment="Top"/>
        <RadioButton Name="RB_3" Content="e^x" ToolTip="Экспонента" HorizontalAlignment="Left" Margin="71,238,0,0" VerticalAlignment="Top"/>

        <Label Content="Вариант №1" HorizontalAlignment="Center" Margin="100,0" VerticalAlignment="Top" Height="30" Width="101" FontSize="15" FontWeight="Bold"/>
        <Label Content="x" HorizontalAlignment="Left" Margin="43,127,0,0" VerticalAlignment="Top"/>
        <Label Content="y" HorizontalAlignment="Left" Margin="43,164,0,0" VerticalAlignment="Top"/>
        <Label Content="Ответ" HorizontalAlignment="Left" Margin="29,259,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Left" ToolTip="Функция" Height="95" Margin="29,28,0,0" VerticalAlignment="Top" Width="285" Source="func.jpg"/>

    </Grid>
</Window>